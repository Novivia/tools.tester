{
  "name": "@novivia/tester",
  "version": "0.0.0",
  "engines": {
    "node": ">=4",
    "npm": ">=3",
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "publishConfig": {
    "registry": "https://npm.novivia.com"
  },
  "description": "Novivia Node.js module tester.",
  "authors": [
    "Mathieu M-Gosselin <mathieumg@novivia.com>",
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git.novivia.com/nov/tools.tester"
  },
  "scripts": {
    "build": "build-module build -b babelConfig.js -b cli.js -b monkeyPatch.js -p cliWrapper",
    "lint": "novivia-linter lint",
    "open-source": "open-source",
    "pub": "build-module publish",
    "release": "build-module release",
    "test": "./cliWrapper",
  },
  "bin": {
    "novivia-tester": "./cliWrapper",
  },
  "novivia-linter": {
    "targets": {
      "global": [
        "cli.js",
        "monkeyPatch.js",
      ],
    },
  },
  "novivia-tester": {
    "coverageLocations": [
      "!cli.js",
      "!monkeyPatch.js",
    ],
  },
  "devDependencies": {
    // Novivia dependencies.
    "@novivia/build-module": "^0.4.0",
    "@novivia/linter": "^1.6.0",

    // npm dependencies.
    "babel-cli": "^6.18.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
  },
  "dependencies": {
    // npm dependencies.
    "babel-jest": "^16.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "jest": "^16.0.2",
    "json5": "^0.5.0",
    "path-exists": "^3.0.0",
  },
}
