{
  "name": "@novivia/tester",
  "version": "0.1.0",
  "engines": {
    "node": ">=4",
    "npm": ">=3",
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "publishConfig": {
    "registry": "https://npm.novivia.com"
  },
  "description": "Novivia Node.js module tester.",
  "authors": [
    "Mathieu M-Gosselin <mathieumg@novivia.com>",
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git.novivia.com/nov/tools.tester"
  },
  "scripts": {
    "build": "novivia-builder build",
    "lint": "novivia-linter lint",
    "open-source": "open-source",
    "pub": "novivia-builder publish",
    "release": "novivia-builder release",
    "test": "./cliWrapper",
  },
  "bin": {
    "novivia-tester": "./cliWrapper",
  },
  "novivia-builder": {
    "babelPatterns": [
      "cli.js",
      "monkeyPatch.js",
    ],
    "packagePatterns": ["cliWrapper"],
  },
  "novivia-linter": {
    "targets": {
      "global": [
        "cli.js",
        "monkeyPatch.js",
      ],
    },
  },
  "novivia-tester": {
    "coverageLocations": [
      "!cli.js",
      "!lib/cli.js",
      "!monkeyPatch.js",
    ],
  },
  "peerDependencies": {
    "babel-polyfill": ">= 6.16.0",
  },
  "devDependencies": {
    // Novivia dependencies.
    "@novivia/build-module": "^0.5.1",
    "@novivia/linter": "^1.10.1",
    "@novivia/open-sourcer": "^0.1.1",
  },
  "dependencies": {
    // Novivia dependencies.
    "@novivia/babel": "0.1.0",

    // npm dependencies.
    "babel-jest": "^18.0.0",
    "jest": "^18.0.0",
    "path-exists": "^3.0.0",
    "pkginfo-json5": "^0.5.0",
  },
}
